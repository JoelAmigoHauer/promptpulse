# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/promptpulse_db

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Application Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Redis Configuration (for caching and real-time features)
REDIS_URL=redis://localhost:6379

# Rate Limiting
API_RATE_LIMIT=100  # requests per minute per IP

# Logging
LOG_LEVEL=INFO
LOG_FILE=promptpulse.log

# Testing
TEST_MODE=False
MOCK_AI_RESPONSES=False  # Set to True for testing without API calls