{
  "version": 2,
  "builds": [
    {
      "src": "packages/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/frontend/dist"
      }
    },
    {
      "src": "api/backend.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/backend.py"
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/packages/frontend/dist/index.html"
    }
  ],
  "installCommand": "npm install --prefix packages/frontend",
  "buildCommand": "npm run build --prefix packages/frontend"
}
