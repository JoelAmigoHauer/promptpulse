{
  "version": 2,
  "builds": [
    {
        "src": "promptpulse-frontend/package.json",      "use": "@vercel/static-build",
      "config": {
            "distDir": "promptpulse-frontend/dist"      }
    },
    {
      "src": "api/backend.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/backend.py"
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
        "dest": "/promptpulse-frontend/dist/index.html"    }
  ],
    "buildCommand": "npm run build --prefix promptpulse-frontend"}
